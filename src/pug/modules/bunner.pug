section.first#first
  section.bunner#bunner
      .bunner__bg.imgs
        picture
            source(srcset="assets/img/home/bunner.webp"  type="image/webp"  media="(min-width: 1200px)")
            source(srcset="assets/img/home/bunner-lg.webp"  type="image/webp"  media="(min-width: 768px) and (max-width: 1199px)")
            source(srcset="assets/img/home/bunner-sm.webp"  type="image/webp"  media="(max-width: 767px)")
